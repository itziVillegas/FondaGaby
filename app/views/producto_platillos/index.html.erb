<div class="marquee">
  <p>Fonda Gaby</p>
  <p>Listado de Detalles de Platillos</p>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listado De Detalles De Platillos</h3>
  </div>

  <div class="panel-body">
    <p class="notice alert alert-success" role="alert"><%= notice %></p>
    <% if ProductoPlatillo.exists? %>
    <div class="input-group">
      <span class="input-group-addon icon icon-search"></span>
      <input type="search" class="form-control" placeholder="Buscador" id="searchTerm" onkeyup="doSearch()">
    </div>
    <div class="table-responsive">
      <table class="table table-hover" id="dataTable">
        <thead>
          <tr>
            <th style="text-align: center;">Producto</th>
            <th style="text-align: center;">Platillo</th>
            <th style="text-align: center;">Cantidad</th>
            <th style="text-align: center;">Unidad de Medida</th>
            <th colspan="3" style="text-align: center;">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @producto_platillos.each do |producto_platillo| %>
            <tr>
              <td style="text-align: center;"><%= producto_platillo.platillo %></td>
              <td style="text-align: center;"><%= producto_platillo.producto %></td>
              <td style="text-align: center;"><%= producto_platillo.cantidad %></td>
              <td style="text-align: center;"><%= producto_platillo.unidad_medida %></td>
              <td style="text-align: center;"><%= link_to '', producto_platillo, class: 'btn btn-info icon icon-eye', style: "color: white", :title => "Mostrar Detalle De Platillo" %></td>
              <td style="text-align: center;"><%= link_to '', edit_producto_platillo_path(producto_platillo), class: 'btn btn-success icon icon-pencil2', style: "color: white", :title => "Editar Detalle De Platillo"  %> </td>
              <td style="text-align: center;"><%= link_to '', producto_platillo, method: :delete, data: { confirm: '¿Estás Seguro?' }, class: 'btn btn-danger icon icon-bin', style: "color: white", :title => "Eliminar Detalle De Platillo" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <hr>
        <%= will_paginate @producto_platillos, renderer: BootstrapPagination::Rails %>
      <hr>

      <%= link_to '', new_producto_platillo_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => "Agregar Detalle De Platillo" %>
    </div>
    <% else %>
    <%= link_to '', new_producto_platillo_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => "Agregar Detalle De Platillo" %>
      <h1 style="text-align: center;">No Existen Registros</h1>
      <h4 style="text-align: center;">Para Agregar Detalles De Platillos Da Click En El Botón <i class="icon icon-plus"></i></h4>
    <% end %>
  </div>
</div>