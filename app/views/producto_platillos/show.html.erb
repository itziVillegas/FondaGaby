<div class="marquee">
  <p>Fonda Gaby</p>
  <p>Datos Del Detalle De Platillo</p>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Datos Del Detalle De Platillo</h3>
  </div>

  <div class="panel-body">

    <p class="notice alert alert-success" role="alert"><%= notice %></p>

    <p>
      <strong>Platillo:</strong>
      <%= @producto_platillo.platillo %>
    </p>

    <p>
      <strong>Producto:</strong>
      <%= @producto_platillo.producto %>
    </p>

    <p>
      <strong>Cantidad:</strong>
      <%= @producto_platillo.cantidad %>
    </p>

    <p>
      <strong>Unidad de Medida:</strong>
      <%= @producto_platillo.unidad_medida %>
    </p>

    <%= link_to 'Editar Detalle de Platillo', edit_producto_platillo_path(@producto_platillo), class: "btn btn-success", style: "color: white" %>
    <%= link_to 'Regresar Al Listado de Detalle de Platillos', producto_platillos_path, class: "btn btn-danger", style: "color: white" %>
  </div>
</div>