<div class="marquee">
  <p>Fonda Gaby</p>
  <p>Listado de Proveedores</p>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listado De Proveedores</h3>
  </div>

  <div class="panel-body">
    <p class="notice alert alert-success" role="alert"><%= notice %></p>
    <% if Proveedore.exists? %>
    <div class="input-group">
      <span class="input-group-addon icon icon-search"></span>
      <input type="search" class="form-control" placeholder="Buscador" id="searchTerm" onkeyup="doSearch()">
    </div>
    <div class="table-responsive">
      <table class="table table-hover" id="dataTable">
        <thead>
          <tr>
            <th style="text-align: center;">Rfc</th>
            <th style="text-align: center;">Nombre</th>
            <th style="text-align: center;">Dirección</th>
            <th style="text-align: center;">Teléfono</th>
            <th style="text-align: center;">Email</th>
            <th colspan="3" style="text-align: center;">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @proveedores.each do |proveedore| %>
          <tr>
            <td style="text-align: center;"><%= proveedore.rfc %></td>
            <td style="text-align: center;"><%= proveedore.nombre %></td>
            <td style="text-align: center;"><%= proveedore.direccion %></td>
            <td style="text-align: center;"><%= proveedore.telefono %></td>
            <td style="text-align: center;"><%= proveedore.correo %></td>
            <td><%= link_to '', proveedore, class: 'btn btn-info icon icon-eye', style: "color: white", :title => 'Mostrar Datos Del Proveedor' %></td>
            <td><%= link_to '', edit_proveedore_path(proveedore), class: 'btn btn-success icon icon-pencil2', style: "color: white", :title => 'Editar Proveedor' %></td>
            <td><%= link_to '', proveedore, method: :delete, data: { confirm: '¿Estás Seguro?' }, class: 'btn btn-danger icon icon-bin', style: "color: white", :title => 'Eliminar Proveedor' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <hr>
        <%= will_paginate @proveedores, renderer: BootstrapPagination::Rails %>
      <hr>

      <%= link_to '', new_proveedore_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => 'Agregar Proveedor' %>
    </div>
    <% else %>
        <%= link_to '', new_proveedore_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => 'Agregar Proveedor' %>
      <h1 style="text-align: center;">No Existen Registros</h1>
      <h4 style="text-align: center;">Para Agregar Proveedores Da Click En El Botón <i class="icon icon-plus"></i></h4>
    <% end %>
  </div>
</div>