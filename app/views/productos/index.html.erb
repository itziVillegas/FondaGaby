<div class="marquee">
  <p>Fonda Gaby</p>
  <p>Listado De Productos</p>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listado De Productos</h3>
  </div>

  <div class="panel-body">
    <p class="notice alert alert-success" role="alert"><%= notice %></p>
    <% if Producto.exists? %>
    <div class="input-group">
      <span class="input-group-addon icon icon-search"></span>
      <input type="search" class="form-control" placeholder="Buscador" id="searchTerm" onkeyup="doSearch()">
    </div>
    <div class="table-responsive">
      <table class="table table-hover" id="dataTable">
        <thead>
          <tr>
            <th style="text-align: center;">Nombre</th>
            <th style="text-align: center;">Fecha de Caducidad</th>
            <th style="text-align: center;">Stock</th>
            <th style="text-align: center;">Cantidad maxima</th>
            <th style="text-align: center;">Categoría</th>
            <th style="text-align: center;">Unidad de Medida</th>
            <th style="text-align: center;">Proveedor</th>
            <th colspan="3" style="text-align: center;">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @productos.each do |producto| %>
            <tr>
              <td style="text-align: center;"><%= producto.nombre %></td>
              <td style="text-align: center;"><%= producto.fecha_caducidad %></td>
              <td style="text-align: center;"><%= producto.stock %></td>
              <td style="text-align: center;"><%= producto.cantidad_maxima %></td>
              <td style="text-align: center;"><%= producto.categoria %></td>
              <td style="text-align: center;"><%= producto.unidad_medida %></td>
              <td style="text-align: center;"><%= producto.proveedor_fk %></td>
              <td style="text-align: center;"><%= link_to '', producto, class: 'btn btn-info icon icon-eye', style: "color: white", :title => 'Mostrar Datos Del Producto' %></td>
              <td style="text-align: center;"><%= link_to '', edit_producto_path(producto), class: 'btn btn-success icon icon-pencil2', style: "color: white", :title => 'Editar Producto' %></td>
              <td style="text-align: center;"><%= link_to '', producto, method: :delete, data: { confirm: '¿Estás Seguro?' }, class: 'btn btn-danger icon icon-bin', style: "color: white", :title => 'Eliminar Producto' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <hr>
        <%= will_paginate @productos, renderer: BootstrapPagination::Rails %>
      <hr>

      <%= link_to '', new_producto_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => 'Agregar Producto' %>
    </div>
    <% else %>
        <%= link_to '', new_producto_path, class: 'btn btn-primary icon icon-plus', style: "color: white", :title => 'Agregar Producto' %>
      <h1 style="text-align: center;">No Existen Registros</h1>
      <h4 style="text-align: center;">Para Agregar Productos Da Click En El Botón <i class="icon icon-plus"></i></h4>
    <% end %>
  </div>
</div>