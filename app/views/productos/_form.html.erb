<%= simple_form_for @producto do |f| %>
  <div class="col-sm-2" style="text-align: center;">
    <%= f.label "Nombre del Producto: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :nombre, label: false, class: 'form-control', placeholder: 'Ej. Jitomate' %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label "Fecha de Caducidad: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :fecha_caducidad, label: false, :as => :date %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label :stock, "Stock: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :stock, label: false, :as => :integer, class: 'form-control', placeholder: 'Ej. 5' %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label :cantidad_maxima, "Cantidad Maxima: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :cantidad_maxima, label: false, :as => :integer, class: 'form-control', placeholder: 'Ej. 10' %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label :categoria, "CategorÃ­a: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :categoria, label: false, collection: ["Verdura", "Fruta", "Lacteos", "Especias", "Carne"], class: 'form-control' %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label :unidad_medida, "Unidad de Medida: " %>
  </div>
  <div class="col-sm-10">
    <%= f.input :unidad_medida, label: false, collection: ["Kilogramos", "Gramos", "Litors", "Mililitros", "Piezas", "Cajas", "Bultos"], class: 'form-control' %>
  </div>

  <div class="col-sm-2" style="text-align: center;">
    <%= f.label :proveedor_fk, "Proveedor: " %>
  </div>
  <div class="col-sm-10">
    <%= f.select(:proveedor_fk, @proveedor_options, class: 'form-control') %>
  </div><br><br><br>

  <div class="col-md-1 col-md-offset-3" style="margin-right: 5px;"><br>
    <button type="submit" class="btn btn-success" title="Guardar"><i class="icon icon-floppy-disk"></i></button>
  </div>
  <div class="col-md-1"><br>
    <%= link_to '', productos_path, class: "btn btn-danger icon icon-cross", style: "color: white; height: 45px;", :title => 'Cancelar' %>
  </div>
<% end %>