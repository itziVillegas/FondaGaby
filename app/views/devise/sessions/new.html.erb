<div class="container" style="padding-top: 100px;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <p class="alert alert-danger" role="alert"><%= alert %></p>
        <h2>Iniciar Sesión</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="field">
              <%= f.label "Email" %>
              <%= f.input :email, label: false, autofocus: true, :as => :email, class: 'form-control', placeholder: 'Email' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Password" %>
              <%= f.input :password, label: false, autocomplete: "off", :as => :password, class: 'form-control', placeholder: 'Password' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Iniciar Sesión", :class => 'btn btn-success', :style => "width: 100%" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>