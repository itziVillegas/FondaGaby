<div class="container" style="padding-top: 10px;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Registrate</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <div class="field">
              <%= f.label "Nombre" %><br />
              <%= f.input :name, label: false, autofocus: true, class: 'form-control', placeholder: 'Ej. Manuel' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Apellidos" %><br />
              <%= f.input :lastname, label: false, class: 'form-control', placeholder: 'Ej. Hernández González' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Teléfono" %><br />
              <%= f.input :phone, label: false, :as => :tel, class: 'form-control', placeholder: 'Ej. 4183984576' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Email" %><br />
              <%= f.input :email, label: false, :as => :email, class: 'form-control', placeholder: 'Ej ejemplo@gmail.com' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimmo)</em>
              <% end %><br />
              <%= f.input :password, label: false, autocomplete: "off", :as => :password, class: 'form-control', placeholder: 'Password' %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label "Confirmar Password" %>
              <%= f.input :password_confirmation, label: false, autocomplete: "off", :as => :password, class: 'form-control', placeholder: 'Confirmar Password' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Registrate", :class => 'btn btn-success', :style => "width: 100%" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>